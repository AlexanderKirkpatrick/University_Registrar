@{
  Layout = "_Layout";
}

@using University_Registrar.Models;
@model List<University_Registrar.Models.Student>;

<h1>Students</h1>
<br>
<br>
@if (@Model.Count == 0)
{
  <h3>No Students have been added yet!</h3>
} 

@foreach (Student student in Model)
{
  @Html.CheckBox("CourseComplete", @student.CourseComplete)
  <li>@Html.ActionLink($"{student.Name}", "Details", new { id = student.StudentId })</li>
}
<br>
<br>
<br>
<p>@Html.ActionLink("Add New Student", "Create")</p>
<p>@Html.ActionLink("Add New Course", "Create", "Courses")</p>
<p>@Html.ActionLink("Show All Courses", "Index", "Courses")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>