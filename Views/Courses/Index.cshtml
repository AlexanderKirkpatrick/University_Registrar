@{
  Layout = "_Layout";
}

@using University_Registrar.Models;

<h1>Courses</h1>

@if (@Model.Count == 0)
{
  <h3>No Courses have been added yet!</h3>
} 

<ul>
  @foreach(Course course in Model)
  {
    <li>@Html.ActionLink($"{course.Name}", "Details", new { id = course.CourseId })</li>
  }
</ul>

<p>@Html.ActionLink("Add new Course", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>